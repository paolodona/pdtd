{
  "name": "pdtodo",
  "version": "0.1.0",
  "private": true,
  "description": "A minimalist lightning-fast distributed TODO app",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "desktop": "pnpm --filter @pdtodo/desktop dev",
    "web": "pnpm --filter @pdtodo/web dev",
    "api": "pnpm --filter @pdtodo/api dev"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "turbo": "^2.3.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
